
<!-- Page Content -->
<div class="container">
  <div class="col-xs-4 col-xs-offset-4"><%= paginate @posts %></div>
    <div class="row">
        <div id="posts-col" class="col-md-9">


    <h4 class="pull-right"></h4>
    <div class="col-lg-8 col-md-10 col-md-offset-1">
    <% @posts.each do |p| %>
        <div class="post-preview">
            <h3 class="post-body" style="font-weight: normal;">
            <%= link_to p.user.username, user_path(id:p.user.id) %>
            </h3>
            <%=raw sanitize(simple_format(p.blurb), :tags => %w(br p em) ) %>
            <p class="post-meta">Posted on <%= p.created_at %></p>
        <% if current_user_session %>
            <%= link_to "DELETE", post_path(id:p.id), :method => :destroy %>
            <%= link_to "EDIT", post_path(id:p.id), :method => :edit %>
        <% end %>
        </div>

    <% end %>


</div>

<!-- /.container -->

<div class="container">

    <hr>

    <!-- Footer -->
    <footer>
        <div class="row">
            <div class="col-lg-12">
              <!--  <p>Copyright &copy; Your Website 2014</p> -->
            </div>
        </div>
    </footer>
</div>
