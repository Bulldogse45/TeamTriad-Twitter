<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
      <% if params[:action] == "new" || params[:action] == "create" %>
        <h2 class="post-title">New post</h1>
      <% else %>
        <h2 class="post-title">Edit post</h1>
      <% end %>
      <%= form_for @post do |f| %>
        <div style="padding-bottom: 10px;" class="form_group">
          <%= f.text_area :blurb, size: "60x12" %>
        </div>
        <div class="form-group">
          <%= f.label :tags, class: "col-sm-2 control-label" %>
          <div class="col-sm-8">
            <%= f.text_field :tags, class: "form-control" %>
          </div>
        </div>
        <%#= f.text_area :blurb, size: "60x12" %>
        <% @posts = Post.all %>
        <% @posts.each do |p| %>
        <% p.user_id %>
      <% end %>
      <%# if current_user_session %>
      <h6><form name="myForm" action="<%= new_post_path %>" method="get">
        <input type="submit" value="SAVE">
      </form></h6> <% end %>
      <hr>
                <!-- Pager -->
    </div>
  </div>
</div>
